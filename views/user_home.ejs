<link rel="stylesheet" href="/css/user_home.css">
<body>
    <div id="main">
        <div id="left">left</div>
        <div id="middle">
            <% if(locals.user){ %>
            <form action="/posts/create" method="post" id="new-post-form">
                <textarea name="content" placeholder='whats on your mind' cols="30" rows="3"></textarea>
                <button type="submit">Post</button>
            </form>
            <%}%>
            <div id="posts">
                <% for(let i of post_list){%>
                    <li class="post">
                        <span>
                            <p><%=i.user.name %></p>
                            <p><%=i.content %></p>
                        </span>
                        <span class="like-share-comment">
                            <i class="fa-solid fa-heart"></i>
                            <i class="fa-solid fa-comment"></i>
                            <i class="fa-solid fa-share"></i>
                        </span>
                        <span class="bookmark"><i class="fa-regular fa-bookmark"></i></span>
                    </li>
                <%}%>
            </div>
        </div>
        <div id="right">right</div>
    </div>
</body>